<div class="wrapper">

  <h3><%= @task.title %> </h3>

  <div class="card">
    <p><%= @task.details %></p>
  </div>

  <% if @task.completed %>
  <div>
    <input type="checkbox" id="scales" name="feature" value="scales" checked />
    <label for="scales">This task is completed</label>
  </div>
  <% else %>
     <div>
       <input type="checkbox" id="scales" name="feature" value="scales" unchecked />
       <label for="scales">This task is not completed</label>
     </div>
  <% end %>

  <%= link_to 'Back | ', tasks_path, :class => "link real-link"%>


  <%= link_to "Edit | ", edit_task_path, :class => "link real-link" %>
  <%= link_to task_path(@task),:class => "link real-link", method: :delete, data: { confirm: "Are you sure?" } do %>
      <i class="fas fa-trash-alt"></i>
    <% end %>
</div>
